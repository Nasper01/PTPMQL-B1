@{
    ViewData["Title"] = "Nhập thông tin người dùng";
}

<h2>@ViewData["Title"]</h2>

<form method="post" asp-controller="Home" asp-action="Index" style="max-width:400px;">
    <div>
        <label for="userName">Tên của bạn:</label><br />
        <input type="text" id="userName" name="userName" required style="width:100%; padding:8px; margin:6px 0;" />
    </div>

    <div>
        <label for="yearOfBirth">Năm sinh:</label><br />
        <input type="number" id="yearOfBirth" name="yearOfBirth" required min="1900" max="@DateTime.Now.Year"
               style="width:100%; padding:8px; margin:6px 0;" />
    </div>

    <button type="submit" style="padding:8px 12px;">Gửi</button>
</form>

@if (ViewBag.Message != null)
{
    <h3 style="color:green; margin-top:20px;">@ViewBag.Message</h3>
}
