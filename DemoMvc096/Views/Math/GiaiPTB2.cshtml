@model DemoMvc096.Models.QuadraticEquation

@{
    ViewData["Title"] = "Giải phương trình bậc 2";
}

<h2>@ViewData["Title"]</h2>

<form method="post" asp-action="GiaiPTB2" style="max-width:400px;">
    <div>
        <label for="A">Hệ số a:</label><br />
        <input type="number" step="any" id="A" name="A" required style="width:100%; padding:6px;" />
    </div>

    <div>
        <label for="B">Hệ số b:</label><br />
        <input type="number" step="any" id="B" name="B" required style="width:100%; padding:6px;" />
    </div>

    <div>
        <label for="C">Hệ số c:</label><br />
        <input type="number" step="any" id="C" name="C" required style="width:100%; padding:6px;" />
    </div>

    <button type="submit" style="margin-top:10px; padding:8px 12px;">Giải phương trình</button>
</form>

@if (Model != null && Model.Result != null)
{
    <h3 style="color:blue; margin-top:20px;">@Model.Result</h3>
}
